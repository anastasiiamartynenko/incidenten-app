<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Incidenten.Mobile.MainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            IconImageSource="plus.png" 
            Text="Create incident"
            Order="Primary"
            Clicked="OnPlusClicked" />
        <ToolbarItem 
            IconImageSource="person.png"
            Text="Account"
            Order="Primary"
            Clicked="OnAccountClicked" />
    </ContentPage.ToolbarItems>
    
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Welcome!" FontSize="20" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
